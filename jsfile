function fixInput(id){
    let data = document.getElementById(id).value.toLowerCase();
    let dataSplit = data.split(" ");
    let input = [];
    for (x in dataSplit) {
        var check = dataSplit[x][0].toUpperCase();
        var fix = dataSplit[x].replace(dataSplit[x][0], check);
        input.push(fix);
        };
    let fixedInput = input.join(" ");
    }
